<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ site_title }}</title>
    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "vc0v8x0fgb");
      function handleOnclickLink(articleId: string){
        if (window.clarity) {
            window.clarity("event", "read_full_article", { articleId });
        }
      }
    </script>
    <meta name="description" content="AI-powered Los Angeles Lakers and NBA news aggregator - Updated every 2 hours">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            /* Lakers colors */
            --lakers-purple: #552583;
            --lakers-gold: #FDB927;
            --lakers-purple-dark: #3d1a5e;
            --lakers-purple-light: #7a4a9e;
            
            /* Neutral colors */
            --bg-primary: #0f0f0f;
            --bg-secondary: #1a1a1a;
            --bg-card: #242424;
            --text-primary: #ffffff;
            --text-secondary: #a0a0a0;
            --text-muted: #666666;
            --border-color: #333333;
            
            /* Spacing */
            --spacing-xs: 0.25rem;
            --spacing-sm: 0.5rem;
            --spacing-md: 1rem;
            --spacing-lg: 1.5rem;
            --spacing-xl: 2rem;
            --spacing-2xl: 3rem;
            
            /* Border radius */
            --radius-sm: 4px;
            --radius-md: 8px;
            --radius-lg: 12px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.6;
            min-height: 100vh;
        }

        /* Header */
        .header {
            background: linear-gradient(135deg, var(--lakers-purple) 0%, var(--lakers-purple-dark) 100%);
            padding: var(--spacing-xl) var(--spacing-md);
            text-align: center;
            border-bottom: 4px solid var(--lakers-gold);
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: var(--spacing-sm);
            color: var(--lakers-gold);
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .header .subtitle {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
        }

        .header .update-info {
            margin-top: var(--spacing-md);
            font-size: 0.875rem;
            color: rgba(255, 255, 255, 0.7);
        }

        .header .stats {
            display: flex;
            justify-content: center;
            gap: var(--spacing-xl);
            margin-top: var(--spacing-lg);
        }

        .header .stat {
            text-align: center;
        }

        .header .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--lakers-gold);
        }

        .header .stat-label {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.7);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Main content */
        .main {
            max-width: 1200px;
            margin: 0 auto;
            padding: var(--spacing-xl) var(--spacing-md);
        }

        /* Topic tabs */
        .topic-tabs {
            display: flex;
            gap: var(--spacing-sm);
            margin-bottom: var(--spacing-xl);
            overflow-x: auto;
            padding-bottom: var(--spacing-sm);
        }

        .topic-tab {
            padding: var(--spacing-sm) var(--spacing-lg);
            background: var(--bg-secondary);
            border: 2px solid var(--border-color);
            border-radius: var(--radius-md);
            color: var(--text-secondary);
            font-weight: 500;
            cursor: pointer;
            white-space: nowrap;
            transition: all 0.2s ease;
        }

        .topic-tab:hover {
            border-color: var(--lakers-purple-light);
            color: var(--text-primary);
        }

        .topic-tab.active {
            background: var(--lakers-purple);
            border-color: var(--lakers-purple);
            color: white;
        }

        /* Topic section */
        .topic-section {
            margin-bottom: var(--spacing-2xl);
        }

        .topic-section.hidden {
            display: none;
        }

        .topic-header {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
            margin-bottom: var(--spacing-lg);
            padding-bottom: var(--spacing-md);
            border-bottom: 2px solid var(--lakers-gold);
        }

        .topic-header h2 {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--lakers-gold);
        }

        .topic-header .article-count {
            background: var(--bg-secondary);
            padding: var(--spacing-xs) var(--spacing-sm);
            border-radius: var(--radius-sm);
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        /* Article grid */
        .articles-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: var(--spacing-lg);
        }

        /* Article card */
        .article-card {
            background: var(--bg-card);
            border-radius: var(--radius-lg);
            padding: var(--spacing-lg);
            border: 1px solid var(--border-color);
            transition: transform 0.2s ease, border-color 0.2s ease;
        }

        .article-card:hover {
            transform: translateY(-2px);
            border-color: var(--lakers-purple-light);
        }

        .article-meta {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            margin-bottom: var(--spacing-sm);
            font-size: 0.75rem;
            color: var(--text-muted);
        }

        .article-source {
            background: var(--lakers-purple);
            color: white;
            padding: 2px 8px;
            border-radius: var(--radius-sm);
            font-weight: 500;
        }

        .article-time {
            color: var(--text-secondary);
        }

        .article-title {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: var(--spacing-sm);
            line-height: 1.4;
        }

        .article-title a {
            color: var(--text-primary);
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .article-title a:hover {
            color: var(--lakers-gold);
        }

        .article-summary {
            color: var(--text-secondary);
            font-size: 0.9375rem;
            margin-bottom: var(--spacing-md);
            line-height: 1.6;
        }

        .article-points {
            list-style: none;
            margin-bottom: var(--spacing-md);
        }

        .article-points li {
            position: relative;
            padding-left: var(--spacing-lg);
            margin-bottom: var(--spacing-xs);
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .article-points li::before {
            content: "‚Ä¢";
            position: absolute;
            left: 0;
            color: var(--lakers-gold);
            font-weight: bold;
        }

        .article-link {
            display: inline-flex;
            align-items: center;
            gap: var(--spacing-xs);
            color: var(--lakers-gold);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: opacity 0.2s ease;
        }

        .article-link:hover {
            opacity: 0.8;
        }

        .article-link svg {
            width: 16px;
            height: 16px;
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: var(--spacing-xl) var(--spacing-md);
            border-top: 1px solid var(--border-color);
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        .footer a {
            color: var(--lakers-gold);
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .header h1 {
                font-size: 1.75rem;
            }

            .header .stats {
                gap: var(--spacing-lg);
            }

            .articles-grid {
                grid-template-columns: 1fr;
            }

            .topic-tabs {
                flex-wrap: nowrap;
            }
        }

        /* No articles state */
        .no-articles {
            text-align: center;
            padding: var(--spacing-2xl);
            color: var(--text-secondary);
        }

        .no-articles-icon {
            font-size: 3rem;
            margin-bottom: var(--spacing-md);
        }
    </style>
</head>
<body>
    <header class="header">
        <h1>üèÄ Info Pulse</h1>
        <p class="subtitle">AI-Powered Lakers & NBA News</p>
        <div class="stats">
            <div class="stat">
                <div class="stat-value">{{ total_articles }}</div>
                <div class="stat-label">Articles</div>
            </div>
            <div class="stat">
                <div class="stat-value">{{ topics|length }}</div>
                <div class="stat-label">Topics</div>
            </div>
        </div>
        <p class="update-info">Last updated: {{ generated_at|format_date }} ‚Ä¢ Updates every 2 hours</p>
    </header>

    <main class="main">
        <!-- Topic tabs -->
        <div class="topic-tabs" role="tablist">
            <button class="topic-tab active" data-topic="all" role="tab" aria-selected="true">
                All News
            </button>
            {% for topic_name, articles in topics.items() %}
            <button class="topic-tab" data-topic="{{ topic_name|lower|replace(' ', '-') }}" role="tab" aria-selected="false">
                {{ topic_name }} ({{ articles|length }})
            </button>
            {% endfor %}
        </div>

        <!-- All articles section -->
        <section class="topic-section" id="topic-all">
            {% if total_articles == 0 %}
            <div class="no-articles">
                <div class="no-articles-icon">üì∞</div>
                <p>No articles yet. Check back soon!</p>
            </div>
            {% else %}
            <div class="articles-grid">
                {% for topic_name, articles in topics.items() %}
                {% for article in articles %}
                <article class="article-card" data-topic="{{ topic_name|lower|replace(' ', '-') }}">
                    <div class="article-meta">
                        <span class="article-source">{{ article.original.source }}</span>
                        <span class="article-time">{{ article.original.published|time_ago }}</span>
                    </div>
                    <h3 class="article-title">
                        <a href="{{ article.original.link }}" target="_blank" rel="noopener noreferrer">
                            {{ article.ai_title }}
                        </a>
                    </h3>
                    {% if article.ai_summary %}
                    <p class="article-summary">{{ article.ai_summary }}</p>
                    {% endif %}
                    {% if article.key_points %}
                    <ul class="article-points">
                        {% for point in article.key_points[:3] %}
                        <li>{{ point }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                    <a href="{{ article.original.link }}" target="_blank" rel="noopener noreferrer" class="article-link" onclick={handleOnclickLink(article.original.link)}>
                        Read full article
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </article>
                {% endfor %}
                {% endfor %}
            </div>
            {% endif %}
        </section>

        <!-- Individual topic sections -->
        {% for topic_name, articles in topics.items() %}
        <section class="topic-section hidden" id="topic-{{ topic_name|lower|replace(' ', '-') }}">
            <div class="topic-header">
                <h2>{{ topic_name }}</h2>
                <span class="article-count">{{ articles|length }} articles</span>
            </div>
            {% if articles|length == 0 %}
            <div class="no-articles">
                <div class="no-articles-icon">üì∞</div>
                <p>No articles for this topic yet.</p>
            </div>
            {% else %}
            <div class="articles-grid">
                {% for article in articles %}
                <article class="article-card">
                    <div class="article-meta">
                        <span class="article-source">{{ article.original.source }}</span>
                        <span class="article-time">{{ article.original.published|time_ago }}</span>
                    </div>
                    <h3 class="article-title">
                        <a href="{{ article.original.link }}" target="_blank" rel="noopener noreferrer">
                            {{ article.ai_title }}
                        </a>
                    </h3>
                    {% if article.ai_summary %}
                    <p class="article-summary">{{ article.ai_summary }}</p>
                    {% endif %}
                    {% if article.key_points %}
                    <ul class="article-points">
                        {% for point in article.key_points[:3] %}
                        <li>{{ point }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                    <a href="{{ article.original.link }}" target="_blank" rel="noopener noreferrer" class="article-link">
                        Read full article
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </article>
                {% endfor %}
            </div>
            {% endif %}
        </section>
        {% endfor %}
    </main>

    <footer class="footer">
        <p>
            Powered by <a href="https://github.com" target="_blank">GitHub Pages</a> ‚Ä¢ 
            AI summaries by <a href="https://openrouter.ai" target="_blank">OpenRouter</a>
        </p>
        <p style="margin-top: 0.5rem;">
            Edit topics via <a href="https://github.com" target="_blank">topics.yaml</a> ‚Ä¢ 
            Go Lakers! üíúüíõ
        </p>
    </footer>

    <script>
        // Topic tab switching
        document.querySelectorAll('.topic-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                // Update active tab
                document.querySelectorAll('.topic-tab').forEach(t => {
                    t.classList.remove('active');
                    t.setAttribute('aria-selected', 'false');
                });
                tab.classList.add('active');
                tab.setAttribute('aria-selected', 'true');

                // Show/hide sections
                const topic = tab.dataset.topic;
                document.querySelectorAll('.topic-section').forEach(section => {
                    if (topic === 'all') {
                        section.classList.toggle('hidden', section.id !== 'topic-all');
                    } else {
                        section.classList.toggle('hidden', section.id !== `topic-${topic}`);
                    }
                });
            });
        });
    </script>
</body>
</html>
